{
  "name": "roku-debug",
  "version": "0.1.0",
  "description": "Debug adapter for Roku application development using Node.js",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf out && tsc",
    "preversion": "npm run build && npm run tslint && npm run test",
    "tslint": "tslint \"./src/**/*.ts\" --outputAbsolutePaths --project tsconfig.json",
    "test": "nyc mocha \"src/**/*spec.ts\" --full-trace",
    "test:nocover": "ts-mocha \"src/**/*.spec.ts\" --full-trace",
    "publish-coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/rokucommunity/roku-debugger"
  },
  "author": "",
  "license": "ISC",
  "nyc": {
    "include": [
      "src/**/!(*.spec).ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "check-coverage": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  },
  "devDependencies": {
    "@types/archiver": "^2.1.2",
    "@types/chai": "^4.2.3",
    "@types/denodeify": "^1.2.31",
    "@types/fs-extra": "^5.0.1",
    "@types/mocha": "^5.2.5",
    "@types/node": "^12.12.28",
    "@types/request": "^2.47.0",
    "@types/sinon": "^7.0.6",
    "chai": "^4.2.0",
    "chai-files": "^1.4.0",
    "coveralls": "^3.0.0",
    "mocha": "^6.2.1",
    "nyc": "^14.1.1",
    "rimraf": "^2.6.2",
    "rxjs": "^6.5.4",
    "sinon": "^7.2.3",
    "source-map-support": "^0.5.13",
    "testdouble": "^3.5.2",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.9.1",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "fs-extra": "^8.1.0",
    "p-defer": "^3.0.0",
    "smart-buffer": "^4.1.0"
  }
}
